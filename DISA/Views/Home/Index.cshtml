@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
        <div id="welcome-text" class="text-center">
            <h1>Velkommen til DISA Bio's film oversigt</h1>
            <p>Hele vores sortiment kan ses nedenfor.</p>
            <p>Vi glæder os meget til at se jer.</p>
        </div>
</div>

<div class="row">
    
    <div>
        <select>
            @foreach (var item in ViewData["DatesWithShowTime"] as IEnumerable<DISA.Models.ShowTime>)
             {
                <option>@item.Time</option>
             }
        </select>
    </div>
    
    @foreach (var item in ViewData["Movies"] as IEnumerable<DISA.Models.Movie>)
    {
        <div class="col-md-3 movie-wrapper">
            <p>@item.Name</p>
            <img src="@item.CoverImage" style="border: 2px solid black" />
            @foreach (var showTime in item.ShowTimes as IEnumerable<DISA.Models.ShowTime>)
            {
                <p>@showTime.Time</p>
            }
            <form action="/Home/Movie" method="post">
                <input type="text" name="movieName" value="@item.Name" hidden/>
                <input type="submit" value="Reserver"/>
            </form>
        </div>
    }
   
</div>
    
